<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/tab_padding"
    tools:context="com.example.steven.smarteating.activity.NutritionShow">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto_light"
                    android:paddingBottom="18dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="5dp"
                    android:text="Nutrition facts help you to make smart, informed food choice that contribute to your healthy diet."
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="294dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto"
                    android:paddingBottom="3dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="5dp"
                    android:text="Most Popular"
                    android:textColor="#000"
                    android:textSize="16.5sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="97dp"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/tomato_click"
                        android:layout_width="81dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/tomato"
                        android:clickable="true"
                        android:padding="1dp"
                        android:scaleType="fitXY" />

                    <ImageButton
                        android:id="@+id/banana_click"
                        android:layout_width="81dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/banana"
                        android:clickable="true"
                        android:padding="1dp"
                        android:scaleType="fitXY" />

                    <ImageButton
                        android:id="@+id/broccoli_click"
                        android:layout_width="81dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/broccoli"
                        android:clickable="true"
                        android:padding="1dp"
                        android:scaleType="fitXY" />

                    <ImageButton
                        android:id="@+id/zucchini_click"
                        android:layout_width="81dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/zucchini"
                        android:clickable="true"
                        android:padding="1dp"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="97dp"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/avocado_click"
                        android:layout_width="81dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/avocado"
                        android:clickable="true"
                        android:padding="1dp"
                        android:scaleType="fitXY" />

                    <ImageButton
                        android:id="@+id/beef_click"
                        android:layout_width="81dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/beef"
                        android:clickable="true"
                        android:padding="1dp"
                        android:scaleType="fitXY" />

                    <ImageButton
                        android:id="@+id/pork_click"
                        android:layout_width="81dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/pork"
                        android:clickable="true"
                        android:padding="1dp"
                        android:scaleType="fitXY" />

                    <ImageButton
                        android:id="@+id/lamb_click"
                        android:layout_width="81dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/lamb"
                        android:clickable="true"
                        android:padding="1dp"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:background="@drawable/edittext_style"
                    android:ems="10"
                    android:fontFamily="@font/roboto_light"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp" />

                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/layout_button"
                    android:text="search"
                    android:textColor="@color/textColorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/foodsearch_rv_list"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/foodsearch_search_field"
                    android:layout_marginTop="2dp"></android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/no_data_available"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>