<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/tab_padding"
    tools:context="com.example.steven.smarteating.activity.NutritionShow">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp">

                <ImageButton
                    android:id="@+id/vegetable_article"
                    android:layout_width="340dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/vegetables"
                    android:clickable="true"
                    android:padding="1dp"
                    android:paddingBottom="20dp"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="341dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="12dp">

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="320dp"
                    android:layout_height="117dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="10dp"
                    android:text="There are many different types of vegetables grown and made available in Australia with a large variety of choice throughout the year.  Vegetables come from many different parts of the plant, including the leaves, roots, tubers, flowers, stems, seeds and shoots. "
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />


                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Legumes are the seeds of the plant and are eaten in their immature form as green peas and beans, and the mature form as dried peas, beans, lentils and chickpeas."
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp">

                <ImageButton
                    android:id="@+id/vegetable_1"
                    android:layout_width="340dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/vegetable_1"
                    android:clickable="true"
                    android:padding="1dp"
                    android:paddingBottom="20dp"
                    android:scaleType="fitXY" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="12dp">

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="314dp"
                    android:layout_height="57dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="10dp"
                    android:text="Vegetables can be broken up into different groups, with each group providing their own unique nutrients. The main sub-groups for"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="vegetables are:"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:lineSpacingExtra="5sp"
                    android:text="Dark green or cruciferous/brassica"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="309dp"
                    android:layout_height="21dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="10dp"
                    android:text="Broccoli, brussels sprouts, bok choy, cabbages,"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="cauliflower, kale"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="Lettuce, silverbeet, spinach, snow peas"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Root/tubular/bulb vegetables"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="314dp"
                    android:layout_height="37dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="10dp"
                    android:text="Potato, cassava, sweet potato, taro, carrots, beetroot, onions, shallots, garlic, bamboo"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="shoots, swede, turnip"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Legumes/beans"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="314dp"
                    android:layout_height="38dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="10dp"
                    android:text="Red kidney beans, soybeans, lima beans, cannellini beans, chickpeas, lentils, split peas,"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="tofu"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp">

                <ImageButton
                    android:id="@+id/vegetable_2"
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/vegetable_2"
                    android:clickable="true"
                    android:padding="1dp"
                    android:paddingBottom="20dp"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Other vegetables"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="315dp"
                    android:layout_height="56dp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="10dp"
                    android:text="Tomato, celery, sprouts, zucchini, squash, avocado, capsicum, eggplant, mushrooms, cucumber, okra, pumpkin, green peas, green"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="beans"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />


                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="311dp"
                    android:layout_height="21dp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="10dp"
                    android:text="Most adults should eat at least 5 serves"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="from the vegetable group a day."
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</FrameLayout>