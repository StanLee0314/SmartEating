<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/tab_padding"
    tools:context="com.example.steven.smarteating.activity.NutritionShow">
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="15dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/grow_food_show"
                    android:layout_width="330dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/grow_food_show"
                    android:padding="1dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:scaleType="fitXY" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="2dp">

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="319dp"
                    android:layout_height="76dp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto"
                    android:paddingBottom="18dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="5dp"
                    android:text="No matter it is in your backyard, or in a nearby community garden, growing your own vegetables will not only help you save money but also bring you inner tranquillity and help "
                    android:textAlignment="textStart"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="start"
                android:fontFamily="@font/roboto"
                android:paddingLeft="19dp"
                android:text="you reconnect with yourself."
                android:textColor="#4A4A4A"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">
                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:background="#A9A9A9"
                    android:paddingRight="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Find what you want to grow."
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingBottom="5dp">
                <EditText
                    android:id="@+id/plants_search_title"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:background="@drawable/edittext_style"
                    android:fontFamily="@font/roboto_light"
                    android:ems="10"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingRight="25dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/plants_search_rv_list"
                    android:layout_width="325dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp">
                </android.support.v7.widget.RecyclerView>
                <TextView
                    android:id="@+id/empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingRight="45dp"
                    android:text="@string/no_data_available"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>