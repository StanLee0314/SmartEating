<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/tab_padding"
    tools:context="com.example.steven.smarteating.activity.NutritionShow">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="480dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp">

                <ImageButton
                    android:id="@+id/grains_article"
                    android:layout_width="340dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/grains"
                    android:clickable="true"
                    android:padding="1dp"
                    android:paddingBottom="20dp"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="341dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="12dp">

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="320dp"
                    android:layout_height="117dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="10dp"
                    android:textColor="#4A4A4A"
                    android:text="Grain foods are mostly made from wheat, oats, rice, rye, barley, millet, quinoa and corn.  The different grains can be cooked and eaten whole, ground into flour to make a variety of cereal foods like bread, pasta and noodles, or made into ready-to-eat breakfast cereals."
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp">

                <ImageButton
                    android:id="@+id/grains_1"
                    android:layout_width="340dp"
                    android:layout_height="184dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/grains_1"
                    android:clickable="true"
                    android:padding="1dp"
                    android:paddingBottom="20dp"
                    android:scaleType="fitXY" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="12dp">

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="314dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="10dp"
                    android:text="Grains (cereal) foods can be broken up into four main groups. The main sub-groups are:"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="314dp"
                    android:layout_height="39dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="10dp"
                    android:text="•	Breads - Wholemeal, wholegrain, white, rye, pita, lavash, naan, focaccia, crispbreads,"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="damper"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="314dp"
                    android:layout_height="39dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="10dp"
                    android:text="•	Breakfast Cereals - Ready to eat, high fibre (wholegrain) oats, porridge, muesli,"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="wholewheat biscuits"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="314dp"
                    android:layout_height="36dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="10dp"
                    android:text="•	Grains - Rice, barley, corn, polenta, buckwheat, spelt, millet, sorghum, triticale,"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="rye, quinoa, semolina"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="314dp"
                    android:layout_height="39dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="10dp"
                    android:text="•	Other products - Pasta, noodles, English muffin, crumpet, rice cakes, couscous,"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="bulgur, popcorn, flour"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp">

                <ImageButton
                    android:id="@+id/grains_2"
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/grains_2"
                    android:clickable="true"
                    android:padding="1dp"
                    android:paddingBottom="20dp"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="40dp"
                android:paddingLeft="12dp">

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="315dp"
                    android:layout_height="75dp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="10dp"
                    android:text="Consuming at least 4-6 serves of grain (cereal) foods per day is recommended for Australian adults, while the amount recommended for children and adolescents "
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="depends on their age and sex."
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</FrameLayout>