<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/tab_padding"
    tools:context="com.example.steven.smarteating.activity.NutritionShow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="28dp">

            <ImageButton
                android:id="@+id/the_five_group"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:paddingBottom="20dp"
                android:background="@drawable/the_five_group"
                android:clickable="true"
                android:padding="1dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="28dp">

            <ImageButton
                android:id="@+id/eating_suggestion"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/eating_suggestion"
                android:clickable="true"
                android:padding="1dp"
                android:paddingTop="20dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <ImageButton
                android:id="@+id/what_need_know"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/what_need_know"
                android:clickable="true"
                android:padding="1dp"
                android:paddingTop="20dp"
                android:scaleType="fitXY" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>